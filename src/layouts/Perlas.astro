---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

type Props = CollectionEntry<"perlas">["data"];

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} />
    <style>
      main {
        width: 100%;
        padding: 20px;
      }
      .title {
        padding: 10px 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .prose p {
        color: #d31c1c !important; /* Color de texto */
        font-size: 1rem; /* Tama√±o de fuente */
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <div>
        <a href="/perlas">Vovler</a>
      </div>
      <article>
        <div class="perlas">
          <div class="title">
            <h3>{title}</h3>
            <hr />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
